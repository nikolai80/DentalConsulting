<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="row">
    <h2 class="text-center">Панель администратора</h2>
</div>
<div class="row">
    <div class="col-md-3"><ul class="nav nav-pills nav-stacked">
    <li role="presentation" class="active">@Html.ActionLink("Управление ролями","Index","AdminPanel")</li>
    <li role="presentation">@Html.ActionLink("Управление пользователями", "UsersList", "AdminPanel")</li>
</ul></div>
    <div class="col-md-9">
        @RenderBody()
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
