@using System.ServiceModel
@using DentalConsulting.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                @* @Html.ActionLink("Стоматологическая консультация", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   @{ IList<string> roles=new List<string>();
                                            ApplicationUserManager userManager=HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>();
                                             ApplicationUser user = userManager.FindByEmail(User.Identity.Name);
                       string firstRole="";
                       if (user != null)
                       {
                           roles = userManager.GetRoles(user.Id);
                          firstRole = roles.FirstOrDefault();
                       }
                   }
                    <li>@Html.ActionLink("Главная страница", "Index", "Home")</li>
                    <li>@if (!String.IsNullOrEmpty(firstRole)&&firstRole=="patient")
                        {
                            @Html.ActionLink("Личный кабинет", "Index", "OwnPagePatient",new{userId=user.Id},null)
                        }
                        else if(!String.IsNullOrEmpty(firstRole) && firstRole == "doctor")
                            {
                            @Html.ActionLink("Личный кабинет", "Index", "OwnDoctorPage",new{userId=user.Id},null)
                            }
                        else
                        {
                            <a style="pointer-events: none">Личный кабинет</a>}
                        
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row page-header">
        <div class="col-md-2">
            <img alt="MainLogo" class="imgMainLogo col-md-offset-1" />
        </div>
        <div class="col-md-8">
            <div class="row">
                <h1 class="col-md-12"> Стоматологическая консультация</h1>
                <h3 class="col-md-offset-3"> Профилактика и лечение кариеса у детей</h3>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
